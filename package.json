{
	"name": "blog-template",
	"type": "module",
	"version": "1.1.0",
	"description": "A template for creating a blog with Astro",
	"author": "danielcgilibert",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielcgilibert/blog-template"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/danielcgilibert/blog-template/issues"
	},
	"scripts": {
		"dev": "tinacms dev -c \"astro dev\"",
		"start": "tinacms build && astro dev",
		"build": "tinacms build && astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --source dist/",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install",
		"format:astro": "prettier --write 'src/pages/[...category].astro' 'src/pages/[...slug].astro'"
	},
	"dependencies": {
		"@astrojs/check": "^0.2.1",
		"@astrojs/rss": "3.0.0",
		"@astrojs/vercel": "^5.0.2",
		"@mailerlite/mailerlite-nodejs": "^1.2.0",
		"@tinacms/cli": "^1.5.31",
		"astro": "^3.3.3",
		"astro-pagefind": "^1.3.0",
		"firebase": "^10.5.0",
		"firebase-admin": "^11.11.0",
		"tinacms": "^1.5.22"
	},
	"devDependencies": {
		"@astrojs/mdx": "^1.1.2",
		"@astrojs/sitemap": "3.0.0",
		"@astrojs/tailwind": "^5.0.2",
		"@pagefind/default-ui": "^0.12.0",
		"@tailwindcss/typography": "0.5.9",
		"@types/node": "^20.9.4",
		"@typescript-eslint/parser": "^6.13.2",
		"clsx": "2.0.0",
		"eslint": "^8.48.0",
		"eslint-plugin-astro": "^0.29.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^10.16.2",
		"pagefind": "^0.12.0",
		"prettier": "^3.0.3",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.12.0",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "1.14.0",
		"tailwindcss": "3.3.3",
		"typescript": "^5.2.2"
	},
	"lint-staged": {
		"src/pages/[...category].astro": [],
		"src/pages/[...slug].astro": []
	}
}
