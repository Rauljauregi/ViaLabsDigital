---
interface Props {
  title: string
  description?: string
  link?: string
  schemaOrg?: Record<string, any>
  class?: string
  ctaText?: string
}
const { title, description, link, schemaOrg, class: klass = '', ctaText = 'Ver servicio' } = Astro.props;
---
<section class={`mb-8 rounded-xl bg-slate-100/70 p-6 ring-1 ring-slate-200 dark:bg-slate-800/40 dark:ring-slate-700 ${klass}`}>
  <h2 class="mb-2 text-xl font-semibold text-slate-900 dark:text-slate-100">
    {title}
  </h2>

  {description && (
    <p class="text-slate-700 dark:text-slate-200">{description}</p>
  )}

  {link && (
    <div class="mt-4">
      <a
        href={link}
        class="inline-flex items-center gap-2 rounded-md bg-amber-400 px-4 py-2 font-semibold text-slate-900 transition hover:bg-amber-300 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-offset-2 dark:focus:ring-offset-slate-900"
      >
        {ctaText} <span aria-hidden>â†’</span>
      </a>
    </div>
  )}

  {schemaOrg && (
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
  )}
</section>
