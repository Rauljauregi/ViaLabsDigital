---
import type { CollectionEntry } from 'astro:content'

import { cn } from '@/utils'
import { Image } from 'astro:assets'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
---

<section class={cn('grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6')}>
	{
		posts.length > 0 ? (
			posts.map((post) => {
				return (
					<div class="flex items-center gap-4">
						<div class="w-16 h-16 sm:w-20 sm:h-20 lg:w-24 lg:h-24">
							<Image
								src={post.data.heroImage}
								width={200}
								height={200}
								format="webp"
								class="w-full h-full object-cover rounded-full"
								alt={`img of ${post.data.title}`}
							/>
						</div>
						<header class="flex-1">
							<a class="font-medium text-sm sm:text-base hover:underline" href={`/post/${post.slug}/`}>
								{post.data.title}
							</a>
						</header>
					</div>
				)
			})
		) : (
