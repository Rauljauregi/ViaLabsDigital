---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

const {
  data: { title, description, pubDate, heroImage, category, tags },
  readTime,
  slug
} = Astro.props
---

<article class='grid grid-rows-[300px_auto] group'>
  <!-- Contenido existente -->

  <div class='flex justify-between flex-col py-6 gap-4 pl-1'>
    <div class='flex flex-col gap-3'>
      <!-- Contenido existente -->

      <!-- Añadir tags aquí -->
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-2">
          {tags.map((tag: string) => (
            <a
              href={`/tags/${tag.toLowerCase()}`}
              class="text-sm bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </div>

    <!-- Footer existente -->
  </div>
</article>

<!-- Script existente -->