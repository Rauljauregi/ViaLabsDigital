---
export interface Props {
    tag: string
}
const { tag } = Astro.props

// Validaci√≥n de seguridad
const safeTag = typeof tag === 'string' ? tag : '';
---

<a href={`/tags/${safeTag.toLowerCase()}`} aria-label={safeTag}>
    <span
        class='bgvialabs font-semibold text-black dark:bgvialabs2 dark:text-black shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
    >
        {safeTag || 'Blog Tag'}
    </span>
</a>