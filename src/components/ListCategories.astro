---
import { getCategories } from '@/utils'
import Category from '@/components/Category'
import TagIcon from './icons/TagIcon.astro'
import HeaderLink from '@/components/HeaderLink'
import { sluglify } from '@/utils'

const categories = await getCategories()
const { activeCategory } = Astro.props
---

<div class='relative flex flex-wrap min-w-full gap-5'>
    <Category />
    {
        categories.map((category: string) => (
            <Category name={category} activeCategory={activeCategory} />
        ))
    }
    <div class='hidden sm:block absolute w-full bottom-0 border-b-2 -z-40 dark:border-gray-600'></div>
    
    <!-- RediseÃ±o del contenedor de Tags -->
    <div class='flex items-center'>
        <HeaderLink 
            href='/tags' 
            class='flex items-center gap-2 text-lg md:text-base px-3 py-1.5 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors'
        >
            <TagIcon class="w-5 h-5" /> 
            <span>Tags</span>
        </HeaderLink>
    </div>
</div>