---
const { isAuthenticated } = Astro.props
const currentLocation = Astro.url.pathname;
---

<div class='flex-grow w-full py-4 flex justify-end'>
	{
		!isAuthenticated ? (
			<form method='post' action='/api/users' id='sign_in' class="gap-2 flex flex-col md:flex-row items-center justify-center w-full md:w-min">
				<input type='email' id='email' name='email' placeholder="Tu dirección de correo" class="py-2 px-4 rounded-md text-center ring-0 focus:ring-0 outline-[#ff9900] text-black w-full md:w-max"/>
				<input type="text" id="location" name="location" value={currentLocation} hidden>
				<button type='submit' class="bg-[#ff9900] px-4 py-2 rounded-md text-white hover:bg-white hover:text-[#ff9900] border-2 border-[#ff9900] w-full">Login/Suscríbete</button>
			</form>
		) : (
			<form action='/api/auth/signout'>
				<button type='submit' id='sign_out'>
					Sign out
				</button>
			</form>
		)
	}
</div>