---
const currentLocation = Astro.url.pathname;
---

<div class='flex-grow w-full py-4 flex justify-center'>
	<form
		method='post'
		action='/api/users'
		id='sign_in'
		class='gap-2 flex flex-col items-center justify-center w-[350px]'
	>
		<input
			type='email'
			id='email'
			name='email'
			placeholder='Tu dirección de correo'
			class='py-2 px-4 rounded-md text-center ring-0 focus:ring-0 w-full text-black outline-[#ff9900]'
		/>
      <input type="text" id="location" name="location" value={currentLocation} hidden>
		<button
			type='submit'
			class='bg-[#ff9900] px-4 py-2 rounded-md text-white hover:bg-white hover:text-[#ff9900] w-full border-2 border-[#ff9900]'
			>Login/Suscríbete</button
		>
	</form>
</div>
