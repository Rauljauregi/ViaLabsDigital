{
  "rewrites": [
    {
      "source": "/newsletter/post/:slug/,*:rest",
      "destination": "https://mindfulml.vialabsdigital.com/post/:slug"
    },
    {
      "source": "/newsletter/post/:slug",
      "destination": "https://mindfulml.vialabsdigital.com/post/:slug"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}