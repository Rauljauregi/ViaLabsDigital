{
  "version": 2,
  "framework": "astro",
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps", // o npm ci si puedes
  "redirects": [
    {
      "source": "/:path((?!.*\\.).*[^/])",
      "destination": "/:path/",
      "permanent": true
    },
    {
      "source": "/newsletter/post/:slug(.*)",
      "destination": "/post/:slug",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "github": {
    "silent": false,
    "autoJobCancelation": true
  },
  "buildEnvironment": {
    "VERCEL_FORCE_NO_BUILD_CACHE": "1"
  }
}
